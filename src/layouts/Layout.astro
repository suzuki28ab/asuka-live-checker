---
import '@/styles/destyle.min.css'
import Header from './Header.svelte';
import Footer from './Footer.svelte';

export interface Props {
  title: string
}

const { title } = Astro.props
---

<!DOCTYPE html>
<html lang="ja">
  <head>
    <link rel="shortcut icon" href="/favicon.ico">
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content="アスカ見参ライブ配信一覧" />
    <meta property="og:title" content={title} />
    <meta property="og:description" content="アスカ見参ライブ配信一覧" />
    <meta property="og:url" content="https://asuka-live-checker.pages.dev" />
    <meta property="og:type" content="website" />
    <title>{title}</title>
  </head>
  <body>
    <Header />
    <div class="content-wrapper">
      <slot />
    </div>
    <Footer />
  </body>
</html>
<style lang="scss" is:global>
  body {
    font-family: 'Helvetica Neue', 'Hiragino Kaku Gothic ProN', 'Hiragino Sans', 'BIZ UDPGothic', Arial, Meiryo, sans-serif;
    line-height: 1.6;
    color: #333;
    background-color: #f0f5f2;

    display: flex;
    flex-direction: column;
    min-height: 100vh;
  }

  .content-wrapper {
    flex-grow: 1;
  }
  code {
    font-family: Menlo, Monaco, Lucida Console, Liberation Mono, DejaVu Sans Mono, Bitstream Vera Sans Mono, Courier New, monospace;
  }
</style>
